        "AssocWANDmziAZ1": { "Type": "AWS::EC2::SubnetRouteTableAssociation", "Properties": { "SubnetId": { "Ref": "SubnetWANDmziAZ1" }, "RouteTableId": { "Ref": "PublicRouteTableAZ1" } } },
        "AssocWANDmziAZ2": { "Type": "AWS::EC2::SubnetRouteTableAssociation", "Properties": { "SubnetId": { "Ref": "SubnetWANDmziAZ2" }, "RouteTableId": { "Ref": "PublicRouteTableAZ2" } } },
