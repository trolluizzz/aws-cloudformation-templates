                        "WANSdwanSubnetAZ1", "LANSdwanSubnetAZ1", "HASdwanSubnetAZ1",
                        "WANDmziSubnetAZ1", "LANDmziSubnetAZ1", "HADmziSubnetAZ1"
                    ]
                },
                {
