        "SubnetLANDmzeAZ1": { "Type": "AWS::EC2::Subnet", "Properties": { "VpcId": { "Ref": "VPC" }, "CidrBlock": { "Ref": "LANDmzeSubnetAZ1" }, "AvailabilityZone": { "Ref": "AZ1" }, "Tags": [ { "Key": "Name", "Value": { "Fn::Sub": "${AWS::StackName}-LAN-DMZe-AZ1" } } ] } },
