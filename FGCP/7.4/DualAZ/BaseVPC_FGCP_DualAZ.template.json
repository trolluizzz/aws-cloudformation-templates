            "ParameterGroups": [
                {
                    "Label": { "default": "VPC and AZ Configuration" },
                    "Parameters": [ "VPCCIDR", "AZ1", "AZ2" ]
                },
                {
                    "Label": { "default": "Subnet Configuration for AZ1" },
                    "Parameters": [ 
                        "MgmtSubnetAZ1", 
